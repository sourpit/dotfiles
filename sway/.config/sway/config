# Copy this to ~/.config/sway/config and edit it to your liking.
# Read `man 5 sway` for a complete reference.

#--- Config files ---------------------------------
include $HOME/.config/sway/conf.d/*

#--- Variables ---------------------------------------
# Your preferred terminal emulator
set $term foot

#--- Output configuration ----------------------------
## Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
# output eDP-1 resolution 1920x1080 position 1920,0
# output * adaptive_sync on scale 1.5
output * scale 2
output eDP-1 allow_tearing yes
output eDP-1 resolution 1920x1080@60hz scale 1
output HDMI-A-1 resolution 1920x1080@60hz scale 2

workspace 1 output eDP-1
workspace 2 output eDP-1
workspace 3 output eDP-1
workspace 4 output DP-1
workspace 5 output DP-1
workspace 6 output HDMI-1
workspace 7 output HDMI-1
workspace 8 output HDMI-A-1
workspace 9 output HDMI-A-1
workspace 10 output HDMI-A-2
workspace 11 output HDMI-A-2

#--- Automatic Floating Windows --------------------------------
## Firefox
# for_window [title = "About Mozilla Firefox"] floating enable
# for_window [app_id="firefox" title="Library"] floating enable, border pixel 1, sticky enable
for_window [title = "Firefox - Sharing Indicator"] kill
for_window [title = "Firefox — Sharing Indicator"] kill
for_window [title = "Picture-in-Picture"] floating enable, sticky enable
for_window [title = "Minecraft"] floating enable
for_window [window_role = "pop-up"] floating enable
for_window [window_role = "bubble"] floating enable
for_window [window_role = "dialog"] floating enable
for_window [window_type = "dialog"] floating enable
for_window [app_id="cmake-gui"] floating enable
for_window [app_id="mpc"] floating enable, sticky enable
for_window [app_id="imv"] floating enable
# cutter
for_window [title = "Open File"] floating enable
for_window [title = "Load Options"] floating enable
for_window [title = "Property Browser — SolveSpace"] floating enable
for_window [app_id="com.hex-rays.ida"] floating enable

focus_follows_mouse yes

#--- Input configuration ----------------------------
#
# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
#   }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

input "2:10:TPPS/2_IBM_TrackPoint" {
  accel_profile adaptive
  pointer_accel 0.8
}

# Enable this when playing minecraft
input "2:7:SynPS/2_Synaptics_TouchPad" {
  dwt disable
}

#
# Status Bar:<D-r>
#
# Read `man 5 sway-bar` for more information about this section.

bar {
  status_command  i3status
  separator_symbol "  "
  position bottom
  font  FiraCode Nerd Font,Bold 18px
  mode dock
  colors {
        statusline   #ebdbb2
        background #282828
        separator #ffff00
        #border 	#bg		#txt
        focused_workspace	#282828 	#ebdbb2	#282828
        inactive_workspace	#282828	#504945	 #ebdbb2
        #active_workspace	#777F8B	#777F8B	#cde4e6
        #urgent_workspace	#DEDFE3	#DEDFE3	#767E8A
  }
}

include @sysconfdir@/sway/config.d/*
